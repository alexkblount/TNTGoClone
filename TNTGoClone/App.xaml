<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="TNTGoClone.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform
                x:Key="FontRegular"
                x:TypeArguments="x:String">
                <On Platform="Android">Fonts/RobotoCondensed-Regular.ttf#RobotoCondensed</On>
                <On Platform="iOS">RobotoCondensed-Regular</On>
            </OnPlatform>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource FontRegular}" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#282828" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>